# ============================================
# Stage 1: 建構階段
# ============================================
FROM node:20-slim AS node-builder

WORKDIR /tmp

# 安裝 Claude Code CLI
RUN npm install -g @anthropic-ai/claude-code

# ============================================
# Stage 2: Python 環境建構
# ============================================
FROM python:3.11-slim AS python-builder

WORKDIR /opt

# 安裝 Python 依賴
COPY requirements.txt .
RUN python -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir -r requirements.txt

# ============================================
# Stage 3: 最終運行階段
# ============================================
FROM python:3.11-slim

LABEL maintainer="devops@intrising.com.tw" \
      description="GitHub Monitor with Claude Code CLI"

# 安裝 Node.js 和必要工具
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    git \
    msmtp \
    msmtp-mta \
    && mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg \
    && echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_20.x nodistro main" | tee /etc/apt/sources.list.d/nodesource.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends nodejs \
    && rm -rf /var/lib/apt/lists/*

# 創建應用用戶
RUN groupadd -r appuser && \
    useradd -r -g appuser -u 1000 -m -s /bin/bash appuser

# 從 node-builder 複製完整的 node_modules 和 Claude CLI
COPY --from=node-builder /usr/local/lib/node_modules /usr/local/lib/node_modules

# 創建 claude 命令的 wrapper script
RUN echo '#!/bin/bash\nexec node /usr/local/lib/node_modules/@anthropic-ai/claude-code/cli.js "$@"' > /usr/local/bin/claude && \
    chmod +x /usr/local/bin/claude

# 設置工作目錄
WORKDIR /app

# 從 python-builder 複製虛擬環境
COPY --from=python-builder /opt/venv /opt/venv

# 複製應用文件
COPY pr_reviewer.py .
COPY config.yaml .

# 創建必要的目錄
RUN mkdir -p /var/log/github-monitor \
    && mkdir -p /home/appuser/.config \
    && chown -R appuser:appuser /app /var/log/github-monitor /home/appuser

# 設置環境變數
ENV PATH="/opt/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    TZ=Asia/Taipei

# 切換到應用用戶
USER appuser

# 健康檢查
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# 默認命令（可被 docker-compose 覆蓋）
CMD ["python3", "pr_reviewer.py"]
